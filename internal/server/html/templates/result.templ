package templates

templ Result(ssl bool, domain string, name string) {
    <div>
        <div class="result">
            Your link
            if ssl {
                <span class="link">https://{ domain }/s/{ name }</span>
            } else {
                <span class="link">http://{ domain }/s/{ name }</span>
            }
        </div>
        <button hx-get="/create" hx-target="main">
            Create Another
        </button>
    </div>
}
