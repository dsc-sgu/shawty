package buttons

templ NavHome(text string) {
    if len(text) == 0 {
        <button hx-get="/home" hx-target="main" hx-swap="outerHTML">
            Homepage
        </button>
    } else {
        <button hx-get="/home" hx-target="main" hx-swap="outerHTML">
            { text }
        </button>
    }
}
